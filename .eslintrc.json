{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "prettier",
    "unused-imports",
    "react-perf",
    "react-hooks"
  ],
  "rules": {
    // "indent": ["error", "tab"], //accepting indentation (temporary, then we can change)
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "prettier/prettier": "error",
    "@typescript-eslint/no-explicit-any": "off", //accepting use of any as a type,
    "@typescript-eslint/ban-ts-comment": "off", //accepting // @ts-ignore
    "unused-imports/no-unused-imports": "error",
    "react-perf/jsx-no-new-function-as-prop": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
